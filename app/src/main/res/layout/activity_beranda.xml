<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".BerandaActivity">

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation">

        <LinearLayout
            android:id="@+id/linearLayout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Header Bar: Welcome + Notification -->
            <LinearLayout
                android:id="@+id/beranda_header_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginTop="50dp"
                android:gravity="center_vertical">

                <!-- Text Welcome -->
                <TextView
                    android:id="@+id/beranda_toolbar_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Welcome, Nada!"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Notification -->
                <FrameLayout
                    android:id="@+id/beranda_notification_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/beranda_notification_icon"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:contentDescription="Notifikasi"
                        android:src="@drawable/bell" />

                    <TextView
                        android:id="@+id/beranda_notification_badge"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="top|end"
                        android:background="@drawable/badge_circle_red"
                        android:gravity="center"
                        android:text="!"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:visibility="visible" />
                </FrameLayout>

            </LinearLayout>

            <!-- SECTION: Monitoring Energi Listrik -->
            <TextView
                android:id="@+id/beranda_monitoring_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginStart="20dp"
                android:text="Monitoring Energi Listrik"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!--  Data Listrik  -->
            <GridLayout
                android:id="@+id/gridParameter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="3"
                android:padding="16dp"
                android:rowOrderPreserved="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_monitoring_title">

                <!-- 1. Tegangan -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_card_tegangan"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/wave1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Tegangan"
                        android:textColor="#007C99"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_voltage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="223.9 V"
                        android:textColor="#007C99"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- 2. Arus -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_card_arus"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/wave2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Arus"
                        android:textColor="#F3A46F"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_current"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="4.102 A"
                        android:textColor="#F3A46F"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- 3. Daya -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_card_daya"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/wave3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Daya"
                        android:textColor="#6366F1"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_power"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="938.7 W"
                        android:textColor="#6366F1"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- 4. Frekuensi -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_card_frekuensi"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/wave4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Frekuensi"
                        android:textColor="#F472B6"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_frequency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="49.9 Hz"
                        android:textColor="#F472B6"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- 5. Energi -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_card_energi"
                    android:padding="12dp"
                    android:layout_margin="8dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/wave4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Energi"
                        android:textColor="#F87171"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tv_energy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16.2 kWh"
                        android:textColor="#F87171"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- 6. Faktor Daya -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_card_pf"
                    android:padding="12dp"
                    android:layout_margin="8dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/wave6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="F. Daya"
                        android:textColor="#34D399"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tv_power_factor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.89"
                        android:textColor="#34D399"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- 7. Tegangan Baterai -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="3"
                    android:background="@drawable/bg_card_batt"
                    android:padding="12dp"
                    android:layout_margin="8dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/wave7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tegangan Baterai"
                        android:textColor="#FFD370"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tv_batt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3.97 V"
                        android:textColor="#FFD370"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

            </GridLayout>

            <!-- DROPDOWN #2: Pilih Harga Listrik (berdasarkan Golongan) -->
            <TextView
                android:id="@+id/beranda_tv_harga_listrik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:text="Harga Listrik"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/beranda_spinner_harga_listrik"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_border_beranda"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

            <!-- INFO: Text jika belum pilih golongan & harga -->
            <TextView
                android:id="@+id/beranda_tv_hint_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="35dp"
                android:text="Pilih harga listrik terlebih dahulu"
                android:textColor="#999999"
                android:textSize="14sp" />

            <!-- INFO: Text jika sudah memilih harga -->
            <LinearLayout
                android:id="@+id/beranda_layout_harga_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/beranda_tv_harga_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš¡ Harga Listrik"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/beranda_tv_harga_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 32.000"
                    android:textSize="22sp"
                    android:textColor="#2563EB"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

