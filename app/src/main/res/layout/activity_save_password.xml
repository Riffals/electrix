<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".SavePasswordActivity">

    <!-- Toolbar Back Icon -->
    <ImageView
        android:id="@+id/save_toolbar_back_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="48dp"
        android:layout_marginStart="32dp"
        android:contentDescription="Kembali ke halaman login"
        android:src="@drawable/arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Toolbar Title -->
    <TextView
        android:id="@+id/save_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Ubah Kata Sandi"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/save_toolbar_back_icon"
        app:layout_constraintBottom_toBottomOf="@id/save_toolbar_back_icon"
        app:layout_constraintStart_toEndOf="@id/save_toolbar_back_icon" />

    <!-- Label Kata Sandi Baru -->
    <TextView
        android:id="@+id/save_password_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:text="Kata Sandi Baru"
        android:textColor="#3563F3"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/save_toolbar_back_icon"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Input Kata Sandi Baru -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/save_password_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:boxBackgroundMode="outline"
        app:endIconMode="password_toggle"
        app:endIconTint="#3563F3"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:hintEnabled="false"
        app:layout_constraintTop_toBottomOf="@id/save_password_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/save_password_input"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Masukkan kata sandi baru"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Label Konfirmasi Kata Sandi -->
    <TextView
        android:id="@+id/save_confirm_password_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        android:text="Konfirmasi Kata Sandi Baru"
        android:textColor="#3563F3"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/save_password_layout"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Input Konfirmasi Kata Sandi -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/save_confirm_password_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:boxBackgroundMode="outline"
        app:endIconMode="password_toggle"
        app:endIconTint="#3563F3"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:hintEnabled="false"
        app:layout_constraintTop_toBottomOf="@id/save_confirm_password_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/save_email_input"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Masukkan konfirmasi sandi baru"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Tombol Simpan -->
    <Button
        android:id="@+id/save_verification_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="48dp"
        android:text="Simpan"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#3563F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
