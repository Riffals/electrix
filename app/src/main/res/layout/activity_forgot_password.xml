<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ForgotPasswordActivity">

    <!-- Toolbar Back Icon -->
    <ImageView
        android:id="@+id/forgot_toolbar_back_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="48dp"
        android:layout_marginStart="32dp"
        android:contentDescription="Kembali ke halaman login"
        android:src="@drawable/arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Toolbar Title -->
    <TextView
        android:id="@+id/forgot_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lupa Kata Sandi"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/forgot_toolbar_back_icon"
        app:layout_constraintBottom_toBottomOf="@id/forgot_toolbar_back_icon"
        app:layout_constraintStart_toEndOf="@id/forgot_toolbar_back_icon" />

    <!-- Deskripsi -->
    <TextView
        android:id="@+id/forgot_desc_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textSize="14sp"
        android:text="Masukkan alamat e-mail yang terdaftar"
        app:layout_constraintTop_toBottomOf="@id/forgot_toolbar_back_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Label Email -->
    <TextView
        android:id="@+id/forgot_email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Email"
        android:textColor="#3563F3"
        android:textSize="16sp"
        android:labelFor="@id/forgot_email_input"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toBottomOf="@id/forgot_desc_text"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Input Email -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/forgot_email_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:hintEnabled="false"
        app:layout_constraintTop_toBottomOf="@id/forgot_email_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/forgot_email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan alamat email" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Button Verifikasi -->
    <Button
        android:id="@+id/forgot_verification_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="48dp"
        android:text="Verifikasi"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#3563F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
